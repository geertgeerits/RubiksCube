<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:RubiksCube.Resources.Languages"
             x:Class="RubiksCube.PageAbout">

    <NavigationPage.TitleView>
        <Label
            Style="{StaticResource labelStyleTitleView}"
            Text="{x:Static resx:CubeLang.Info_Text}">
        </Label>
    </NavigationPage.TitleView>

    <ScrollView>
        <StackLayout
            Margin="15"
            Spacing="4">

            <Label
                Style="{StaticResource labelStyleDefault}"
                Text="{x:Static resx:CubeLang.NameProgram_Text}"
                FontSize="18">
            </Label>

            <Label
                Style="{StaticResource labelStyleDefault}"
                Text="{x:Static resx:CubeLang.Description_Text}">
            </Label>

            <Label
                x:Name="lblVersion"
                Style="{StaticResource labelStyleDefault}"
                Text="{x:Static resx:CubeLang.Version_Text}">
            </Label>

            <Label
                x:Name="lblCopyright"
                Style="{StaticResource labelStyleDefault}"
                Text="{x:Static resx:CubeLang.Copyright_Text}">
            </Label>

            <HorizontalStackLayout
                Spacing="10">
                
                <Label
                    x:Name="lblEmail"
                    Style="{StaticResource labelStyleDefault}"
                    Text="{x:Static resx:CubeLang.Email_Text}">
                </Label>

                <ImageButton
                    Source="circled_envelope_24p.png"                         
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    HeightRequest="24"
                    WidthRequest="24"
                    Clicked="OnBtnEmailLinkClicked">
                </ImageButton>
            </HorizontalStackLayout>

            <HorizontalStackLayout
                Spacing="10">
                
                <Label
                    x:Name="lblWebsite"
                    Style="{StaticResource labelStyleDefault}"
                    Text="{x:Static resx:CubeLang.Website_Text}">
                </Label>

                <ImageButton
                    Source="internet_24p.png"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    HeightRequest="24"
                    WidthRequest="24"
                    Clicked="OnBtnWebsiteLinkClicked">
                </ImageButton>
            </HorizontalStackLayout>

            <Label
                x:Name="lblPrivacyPolicy"
                Style="{StaticResource labelStyleInfo}"
                Text="{x:Static resx:CubeLang.PrivacyPolicy_Text}">
            </Label>

            <Label
                x:Name="lblLicense"
                Style="{StaticResource labelStyleInfo}"
                Text="{x:Static resx:CubeLang.License_Text}">
            </Label>

            <Label
                Style="{StaticResource labelStyleInfo}"
                Text="{x:Static resx:CubeLang.LicenseMit2_Text}">
            </Label>

            <Label
                Style="{StaticResource labelStyleInfo}"
                Text="{x:Static resx:CubeLang.CubeHelp_Text}">
            </Label>

            <Label
                Style="{StaticResource labelStyleInfo}"
                Text="{x:Static resx:CubeLang.InfoExplanation_Text}">
            </Label>

        </StackLayout>
    </ScrollView>
</ContentPage>